  <h2>ADAPTIS QR SoundBox</h2>

  <div class="input-container">
    <input type="text" id="qrText" placeholder="Enter SoundBox S/N (e.g. KD68W504134)" />
    <button onclick="generateQRCode()">
      <i class="fas fa-qrcode"></i> Generate
    </button>
  </div>

  <div id="qrSection">  
    <div class="qr-container">
      <div id="qrcode" style="padding: 10px;"></div>	  
      <div class="qr-text">Scan to Pay</div>	  
      <img src="logo.png" alt="ADAPTIS Logo" class="logo">
    </div>
  </div>

  <footer>
    <div>© 2025 ADAPTIS | QR Generator</div>	
  </footer>

  <script>    
    const qrCode = new QRCodeStyling({
      width: 300,
      height: 300,
      image: "QRlogo.jpg",
      type: "svg",
      dotsOptions: {
        color: "#1e3a8a",
        type: "rounded"
      },
      backgroundOptions: {
        color: "#ffffff",
      },
      imageOptions: {
        crossOrigin: "anonymous",
        margin: 5,
        imageSize: 0.4
      }
    });

    let isFirstRender = true;

    function generateQRCode() {
      let text = document.getElementById("qrText").value.trim();
      if (text === "") {
        alert("Please insert your SoundBox S/N!");
        return;
      }
      text = "https://ratchpol.github.io/adaptisnexgo/?sn=S" + text; 

      qrCode.update({ data: text });

      if (isFirstRender) {
        qrCode.append(document.getElementById("qrcode"));
        isFirstRender = false;
      }
      
      document.getElementById("qrSection").style.display = "block";
    }
  </script>

